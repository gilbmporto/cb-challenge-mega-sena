<h1>{{title}}</h1>
<form id="number-form" action="/submit" method="POST">
  <section>
    <div class="numbers-grid">
      {{#each numbers}}
        <div class="number-circle" data-number="{{this}}">{{this}}</div>
      {{/each}}
    </div>
  </section>
  <input type="hidden" name="selectedNumbers" id="selectedNumbers" />
  <div class="submit-area">
    <button type="submit" class="submit">Jogar</button>
  </div>
</form>